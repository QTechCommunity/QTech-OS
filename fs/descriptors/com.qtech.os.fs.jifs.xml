<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="com.qtech.os.fs.jifs"
        name="Jnode Information FileSystem"
        version="@VERSION@"
        license-name="lgpl"
        provider-name="QTechOS">
        
        
  <requires>
	<import plugin="com.qtech.os.fs.service"/>
	<import plugin="com.qtech.os.fs"/>
    <import plugin="com.qtech.os.log4j"/>
    <import plugin="com.qtech.os.driver.serial"/>
    <import plugin="com.qtech.os.driver.input"/>
  </requires>
        
  <runtime>
    <library name="jnode-fs.jar">
      <export name="com.qtech.os.fs.jifs.*"/>
      <export name="com.qtech.os.fs.jifs.directories.*"/>
      <export name="com.qtech.os.fs.jifs.files.*"/>
    </library>
  </runtime>
  
  <extension point="com.qtech.os.fs.types">
    <type class="com.qtech.os.fs.jifs.JIFileSystemType"/>
  </extension>
  
  <extension point="com.qtech.os.security.permissions">
    <permission class="java.util.PropertyPermission" name="*" actions="read,write"/>
    <permission class="java.lang.RuntimePermission" name="getProtectionDomain"/>
    <permission class="java.lang.RuntimePermission" name="modifyThreadGroup"/> 
    <permission class="com.qtech.os.permission.JNodePermission" name="getVmThread"/>
  </extension> 
        
</plugin>
