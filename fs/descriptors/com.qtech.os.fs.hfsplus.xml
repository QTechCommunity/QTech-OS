<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="com.qtech.os.fs.hfsplus"
        name="QTech OS HFS+ FileSystem"
        version="@VERSION@"
        license-name="lgpl"
        provider-name="QTechOS">
        
  <requires>
    <import plugin="com.qtech.os.fs"/>
    <import plugin="com.qtech.os.partitions.ibm"/>
  </requires>
        
  <runtime>
    <library name="jnode-fs.jar">
    <export name="com.qtech.os.fs.hfsplus.*"/>
    <exclude name="com.qtech.os.fs.hfsplus.*Test"/>
    <export name="com.qtech.os.fs.hfsplus.attributes.*"/>
    <export name="com.qtech.os.fs.hfsplus.catalog.*"/>
    <export name="com.qtech.os.fs.hfsplus.compression.*"/>
	<export name="com.qtech.os.fs.hfsplus.extent.*"/>
	<export name="com.qtech.os.fs.hfsplus.tree.*"/>
    </library>
  </runtime>
        
  <extension point="com.qtech.os.fs.types">
    <type class="com.qtech.os.fs.hfsplus.HfsPlusFileSystemType"/>
  </extension>
        
</plugin>
