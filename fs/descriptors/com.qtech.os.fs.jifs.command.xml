<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="com.qtech.os.fs.jifs.command"
        name="Jnode Information FileSystem"
        version="@VERSION@"
        provider-name="QTechOS"
        license-name="lgpl">
        
  <requires>
	<import plugin="com.qtech.os.fs.jifs"/>
    <import plugin="com.qtech.os.shell"/>
    <import plugin="com.qtech.os.shell.syntax"/>
  </requires>
        
  <runtime>
    <library name="jnode-fs.jar">
      <export name="com.qtech.os.fs.jifs.command.*"/>
    </library>
  </runtime>
  
  <extension point="com.qtech.os.shell.aliases">
    <alias name="jifs" class="com.qtech.os.fs.jifs.command.CreateJIFSCommand"/>
  </extension>
  
  <extension point="com.qtech.os.shell.syntaxes">
    <syntax alias="jifs">
      <argument argLabel="action" description="Manage the JIFS filesystem plugin"/>
    </syntax>
  </extension>
  
  <extension point="com.qtech.os.security.permissions">
    <permission class="com.qtech.os.permission.JNodePermission" name="stopPlugin"/>
    <permission class="com.qtech.os.permission.JNodePermission" name="startPlugin"/>
  </extension> 
        
</plugin>
