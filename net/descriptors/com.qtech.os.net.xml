<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="com.qtech.os.net"
  name="QTech OS Network System"
  version="@VERSION@"
  provider-name="QTechOS"
        license-name="lgpl"
  class="com.qtech.os.net.service.NetPlugin">

  <requires>
    <import plugin="com.qtech.os.driver"/>
    <import plugin="com.qtech.os.driver.console"/>
    <import plugin="com.qtech.os.log4j"/>
  </requires>

  <runtime>
    <library name="jnode-net.jar">
      <export name="com.qtech.os.driver.net.*"/>
      <export name="com.qtech.os.driver.net.event.*"/>
      <export name="com.qtech.os.driver.net.spi.*"/>
      <export name="com.qtech.os.net.*"/>
      <export name="com.qtech.os.net.ethernet.*"/>
      <export name="com.qtech.os.net.service.*"/>
      <export name="com.qtech.os.net.util.*"/>
      <export name="com.qtech.os.net.wireless.*"/>
    </library>
  </runtime>

  <extension-point id="networkLayers" name="QTech OS Network layers"/>


</plugin>
