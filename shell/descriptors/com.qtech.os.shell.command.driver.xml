<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="com.qtech.os.shell.command.driver"
        name="QTech OS driver commands"
        version="@VERSION@"
        license-name="lgpl"
        provider-name="QTechOS">

  <requires>
    <import plugin="com.qtech.os.driver"/>
    <import plugin="com.qtech.os.shell.help"/>
  </requires>

  <runtime>
    <library name="jnode-shell.jar">
      <export name="com.qtech.os.shell.command.driver.*"/>
    </library>
  </runtime>

  <extension point="com.qtech.os.shell.aliases">
    <alias name="device" class="com.qtech.os.shell.command.driver.DeviceCommand"/>
  </extension>
  
  <extension point="com.qtech.os.shell.syntaxes">
    <syntax alias="device">
      <empty description="Show all devices"/>
      <argument argLabel="device" description="Show a specific device"/>
      <sequence description="Perform an action on a device">
        <argument argLabel="action"/>
        <argument argLabel="device"/>
      </sequence>
    </syntax>
  </extension>
  
  <extension point="com.qtech.os.security.permissions">
    <permission class="java.util.PropertyPermission" name="user.dir" actions="read"/>
  </extension>       
  

</plugin>
