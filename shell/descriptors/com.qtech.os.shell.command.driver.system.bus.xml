<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="com.qtech.os.shell.command.driver.system.bus"
        name="QTech OS System bus commands"
        version="@VERSION@"
        license-name="lgpl"
        provider-name="QTechOS">

  <requires>
    <import plugin="com.qtech.os.driver.bus.smbus"/>
    <import plugin="com.qtech.os.shell.help"/>
  </requires>

  <runtime>
    <library name="jnode-shell.jar">
      <export name="com.qtech.os.shell.command.driver.system.bus.*"/>
    </library>
  </runtime>

  <extension point="com.qtech.os.shell.aliases">
    <alias name="smbus" class="com.qtech.os.shell.command.driver.system.bus.SMBusCommand"/>
  </extension>

  <extension point="com.qtech.os.shell.syntaxes">
    <syntax alias="smbus" description="dump information from the system's SMBus controller"/>
  </extension>
</plugin>
