<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="com.qtech.os.apps.jpartition"
       name="JPartition"
       version="@VERSION@"
       license-name="lgpl"
       provider-name="QTechOS">

  <runtime>
	<library name="jnode-distr.jar">
    	<export name="com.qtech.os.apps.jpartition.*"/>
    	<export name="com.qtech.os.apps.jpartition.commands.*"/>
    	<export name="com.qtech.os.apps.jpartition.commands.framework.*"/>
    	<export name="com.qtech.os.apps.jpartition.consoleview.*"/>
    	<export name="com.qtech.os.apps.jpartition.consoleview.components.*"/>
    	<export name="com.qtech.os.apps.jpartition.model.*"/>
    	<export name="com.qtech.os.apps.jpartition.swingview.*"/>
    	<export name="com.qtech.os.apps.jpartition.swingview.actions.*"/>
    </library>
  </runtime>

  <requires>
    <import plugin="com.qtech.os.shell"/>
    <import plugin="com.qtech.os.shell.syntax"/>
    <import plugin="com.qtech.os.fs.ext2"/>
    <import plugin="com.qtech.os.fs.fat"/>
    <import plugin="com.qtech.os.fs.jfat"/>
    <import plugin="com.qtech.os.driver.bus.ide"/>
  </requires>

  <extension point="com.qtech.os.security.permissions">
    <permission class="java.lang.RuntimePermission" name="setIO"/>
    <permission class="java.lang.RuntimePermission" name="exitVM" actions="*" />
    <permission class="java.awt.AWTPermission" name="createRobot"/>
    <permission class="java.awt.AWTPermission" name="readDisplayPixels"/>
    <permission class="java.util.PropertyPermission" name="user.home" actions="read"/>
    <permission class="java.util.PropertyPermission" name="gnu.awt.dispatchthread.priority" actions="read"/>
    <permission class="java.util.PropertyPermission" name="gnu.javax.swing.DebugGraphics" actions="read"/>
  </extension>

  <extension point="com.qtech.os.shell.aliases">
    <alias name="jpartition" class="com.qtech.os.apps.jpartition.JPartitionCommand"/>
  </extension>
  
  <extension point="com.qtech.os.shell.syntaxes">
    <syntax alias="jpartition">
      <sequence description="interactive disk partitioning tool">
        <alternatives>
          <option argLabel="console" shortName="c" longName="console"/>
          <option argLabel="swing" shortName="s" longName="swing"/>
        </alternatives>
        <optional><option argLabel="install" shortName="i" longName="install"/></optional>
      </sequence>
    </syntax>
  </extension>
</plugin>
