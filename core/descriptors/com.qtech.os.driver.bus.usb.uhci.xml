<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="com.qtech.os.driver.bus.usb.uhci"
        name="QTech OS USB UHCI HostController driver"
        version="@VERSION@"
        license-name="lgpl"
        provider-name="QTechOS">
        
  <requires>
    <import plugin="com.qtech.os.driver.bus.pci"/>
    <import plugin="com.qtech.os.driver.bus.usb"/>
  </requires>
        
  <runtime>
    <library name="jnode-core.jar">
      <export name="com.qtech.os.driver.bus.usb.uhci.*"/>
    </library>
  </runtime>

  <extension point="com.qtech.os.driver.mappers">
    <mapper class="com.qtech.os.driver.bus.pci.PCIClassToDriverMapper"
            id="0c:03:00"
            driver-class="com.qtech.os.driver.bus.usb.uhci.UHCIDriver"/>
  </extension>
        
  <extension point="com.qtech.os.security.permissions">
    <permission class="com.qtech.os.system.resource.ResourcePermission" name="ioports"/>
  </extension>
        
</plugin>
